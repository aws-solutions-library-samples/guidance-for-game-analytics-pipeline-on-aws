{
  "name": "project-root",
  "version": "0.0.1",
  "config": {
    "iac": "cdk"
  },
  "scripts": {
    "build": "python3 build.py",
    "build.logic": "python3 build.py --business_logic",
    "build.infrastructure": "python3 build.py --infrastructure",
    "cdk:deploy.bootstrap": "cd infrastructure/aws-cdk && npm install && npm run bootstrap",
    "cdk:deploy": "cd infrastructure/aws-cdk && npm run cdk deploy -- -c stack_name=\"${STACK_NAME:-}\" --all --require-approval never",
    "cdk:destroy": "cd infrastructure/aws-cdk && npm run cdk destroy -- -c stack_name=\"${STACK_NAME:-}\" --all",
    "tf:deploy.bootstrap": "cd infrastructure/terraform && echo 'Terraform Deploy Bootstrap'",
    "tf:deploy": "cd infrastructure/terraform && echo 'Terraform Deploy'",
    "tf:destroy": "cd infrastructure/terraform && echo 'Terraform Destroy'",
    "deploy.bootstrap": "npm run $npm_package_config_iac:deploy.bootstrap",
    "deploy": "npm run $npm_package_config_iac:deploy",
    "destroy": "npm run $npm_package_config_iac:destroy"
  },
  "devDependencies": {
    "esbuild": "^0.24.2"
  },
  "dependencies": {
    "@types/node": "^22.13.17"
  }
}
